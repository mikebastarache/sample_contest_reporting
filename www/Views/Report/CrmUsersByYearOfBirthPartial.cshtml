    @(Html.Kendo().Grid(Model)
        .Name("Grid2")
            .DataSource(dataSource  => dataSource 
                    .Ajax()
                    .Read(read  => read.Action("CrmUsersByYearOfBirthRead", "Report"))
            )
        .HtmlAttributes(new { style = "height: 453px" })
