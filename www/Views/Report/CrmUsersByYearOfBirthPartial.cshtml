        //.ToolBar(toolBar => 
        //                toolBar.Custom()
        //                    .Text("Export To PDF")
        //                    .HtmlAttributes(new { id = "export" })
        //                    .Url(Url.Action("ExportPdf", "Report", new { page = "1", pageSize = "10", filter = "UserId~gt~0", sort = "UserId-asc" }))
